{
  "manifest_version": 2,
  "name": "Web Time",
  "version": "1.0",
  "description": "Measue browsing time and set daily time limits.",
  "homepage_url": "https://github.com/ada/web-time",
  "icons": {
    "48": "./icons/font-awesome_4-7-0_hourglass-half_48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "storage",
    "alarms",
    "notifications",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "./options/options.html"
  },
  "browser_action": {
    "default_icon": "./icons/font-awesome_4-7-0_hourglass-half_32.png",
    "default_title": "Web Time",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "page": "./background/background.html"
  }
}