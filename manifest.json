{
  "manifest_version": 2,
  "name": "Time Analytics",
  "version": "1.0",
  "description": "Measue browsing time and set daily time limits.",
  "homepage_url": "https://github.com/",
  "icons": {
    "48": "./icons/beasts-48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "storage",
    "alarms",
    "notifications"
  ],
  "options_ui": {
    "page": "./options/options.html"
  },
  "browser_action": {
    "default_icon": "./icons/beasts-32.png",
    "default_title": "Time Analytics",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "page": "./background/background.html"
  },
  "applications": {
    "gecko": {
      "id": "TimeAnalytics@local.com"
    }
  }
}